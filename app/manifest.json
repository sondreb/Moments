{
  "manifest_version": 2,
  "name": "Moments",
  "description": "Photo viewer with some simple managements features",
  "version": "0.0.1",
  "permissions": [
	  "storage",
	  "webview",
	  "fileBrowserHandler",
	  "fileSystem",
    "system.storage",
	  "unlimitedStorage",
    "notifications",
	  "fullscreen",
	   "https://api.flickr.com/*",
	   "http://*.staticflickr.com/*",
	   "http://brain.no/*"],
  "minimum_chrome_version": "23",
  "offline_enabled": true,
  "icons": {
    "256": "img/icon_256.png",
    "128": "img/icon_128.png",
    "48": "img/icon_48.png",
    "16": "img/icon_16.png"
  },
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  }
}
